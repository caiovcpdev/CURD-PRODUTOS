@model WEBCRUDMVCSQL.Models.Usuario

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Registre-se!</h1>
</div>

<div>
    <form asp-action="RegistrarUsuario">
        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input asp-for="Nome" type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label asp-for="Senha" class="form-label">Senha</label>
            <input asp-for="Senha" type="password" class="form-control">
        </div>
        <div class="mb-3">
            <label for="exampleInputPasswordConfirm" class="form-label">Confirme sua Senha</label>
            <input type="password" class="form-control" id="exampleInputPasswordConfirm">
        </div>
        <div style="display: flex;">
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a style="margin-left:10px; padding-top:10px;" asp-controller="Produtos" asp-action="Index">Entre com sua conta!</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}