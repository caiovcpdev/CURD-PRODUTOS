@{
    ViewData["Title"] = "Home Page";
    @model WEBCRUDMVCSQL.Models.Usuario
}

<div class="text-center">
    <h1 class="display-4">Olá, Seja Bem-Vindo!</h1>
</div>

<div>
    <form>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Senha</label>
            <input type="password" class="form-control" id="exampleInputPassword1">
        </div>
        <div style="display: flex;">
            <button type="submit" class="btn btn-primary">Registrar</button> 
            <a style="margin-left:10px; padding-top:10px;" asp-controller="Usuario" asp-action="Registrar">Registre-se!</a>
        </div>
    </form>
</div>
