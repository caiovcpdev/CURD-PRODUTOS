@model IEnumerable<WEBCRUDMVCSQL.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Produtos</h1>

<p>
    <a type="button" class="btn btn-primary btn-lg" asp-action="Create">Novo Produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col"> Código</th>
            <th scope="col"> @Html.DisplayNameFor(model => model.Nome)</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model){
        <tr>
                <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a type="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                    <a type="button" class="btn btn-outline-warning" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> 
                    <a type="button" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
        </tr>}

    </tbody>
</table>